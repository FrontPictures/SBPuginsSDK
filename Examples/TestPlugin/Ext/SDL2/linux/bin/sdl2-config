#!/bin/sh

prefix=/home/gogan/ext/SDL/SDL_install
exec_prefix=${prefix}
exec_prefix_set=no
libdir=/home/gogan/ext/SDL/SDL_install/lib

#usage="\
#Usage: $0 [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--cflags] [--libs]"
usage="\
Usage: $0 [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--cflags] [--libs] [--static-libs]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo 2.0.20
      ;;
    --cflags)
      echo -I/home/gogan/ext/SDL/SDL_install/include/SDL2  -D_REENTRANT
      ;;
    --libs)
      echo -L/home/gogan/ext/SDL/SDL_install/lib -Wl,-rpath,${libdir} -Wl,--enable-new-dtags -pthread -lSDL2 
      ;;
    --static-libs)
#    --libs|--static-libs)
      echo -L/home/gogan/ext/SDL/SDL_install/lib -pthread -lSDL2  -lrt -lglib-2.0 -lgobject-2.0 -lgio-2.0 -libus-1.0 -ldbus-1 -ldl -lm  -Wl,--no-undefined -pthread -lSDL2 
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done
